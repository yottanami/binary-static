- stash(
-   title => l('Cashier'),
- );

.grd-grid-12.grd-row-padding
  %h1= l('Cashier')

.grd-row-padding.table-body
  .grd-grid-2.grd-grid-mobile-4
    .grd-grid-12
      %a.pjaxload{:href => stash('deposit_url'), :id => 'payment_methods'}
        %img#payment_methods_icon.responsive.charting-page-icon{:src => url_for('images/pages/cashier/payment-methods.svg')}
  .grd-grid-5.grd-grid-mobile-12
    %p= l('Deposit or withdraw to your account via bank-wire, credit card, or e-cash wallet.')
    %a.pjaxload#view_payment_methods{:href=>url_for('cashier/payment_methods')}= l('View available payment methods')
  .grd-grid-5.grd-grid-mobile-12
    .grd-row-padding
      %a.pjaxload.button.button_large.by_client_type.client_real.with_login_cookies{ :href => stash('deposit_url') }
        %span= l('Deposit')
    .grd-row-padding
      %a.pjaxload.button.button_large.by_client_type.client_real.with_login_cookies{ :href => stash('withdraw_url') }
        %span= l('Withdraw')

.grd-row-padding
  %span

#payment-agent-section.grd-row-padding.table-body
  .grd-grid-2.grd-grid-mobile-4
    .grd-grid-12
      %a.pjaxload{:href => url_for('/cashier/payment_agent_list'), :id => 'payment_agent'}
        %img#payment_agent_icon.responsive.charting-page-icon{:src => url_for('images/pages/cashier/payment-agents.svg')}
  .grd-grid-5.grd-grid-mobile-12
    %p= l('You can use an authorized payment agent to process deposits and withdrawals for e-cash methods or local currencies not supported by [_1].', stash->{website_name})
  .grd-grid-5.grd-grid-mobile-12
    .grd-row-padding
      %a.pjaxload.button.button_large.by_client_type.client_real.with_login_cookies{:href => url_for('/cashier/payment_agent_list')}
        %span= l('Deposit To Payment Agent')
    .grd-row-padding
      %a.pjaxload.button.button_large.by_client_type.client_real.with_login_cookies{:href => url_for('/paymentagent/withdraw')}
        %span= l('Withdraw Via Payment Agent')

#account-transfer-section.grd-row-padding.table-body
  .grd-grid-2.grd-grid-mobile-4
    .grd-grid-12
      %a.pjaxload{:href => url_for('/cashier/account_transfer'), :id => 'account_transfer'}
        %img#acc_transfer_icon.responsive.charting-page-icon{:src => url_for('images/pages/cashier/account-transfer.svg')}
  .grd-grid-5.grd-grid-mobile-12
    %p= l('Transfer between your gaming and financial accounts.')
  .grd-grid-5.grd-grid-mobile-12
    .grd-row-padding
      %a.pjaxload.button.button_large.by_client_type.client_real.with_login_cookies{:href => url_for('/cashier/account_transfer')}
        %span= l('Transfer')
